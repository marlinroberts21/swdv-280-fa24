@page
@model AppointmentsModel

@{
    ViewData["Title"] = "Appointments Page";
}

<head><title>Appointments</title></head>
<body>
<h1 class="text-center">Schedule an Appointment!</h1>

<p>Inster filler info here</p>

<!-- The form for scheduling an appointment -->
<form>
    <asp:Calander id="Calender1" runat="server" Height="263px" Width="283px"></asp:Calander>

    <div class="m-5">
        <label for="services">Type of Service:</label>
        <select name="services" id="service">
            <option value="collision">Collision Repair</option>
            <option value="paint">Painting</option>
            <option value="specialtyPaint">Specialty Painting</option>
        </select> <br />
    </div>

    <div class="d-flex justify-content-center m-5">
        <label class="me-5 text-start">First Name: </label><input type="text" /> <br />
    </div>

    <div class="d-flex justify-content-center m-5">
        <label class="me-5 text-start">Last Name: </label><input type="text" /> <br />
    </div>
      
    <div class="d-flex justify-content-center m-5">
        <label class="me-5 text-start">Email Address: </label><input type="text" /> <br />
    </div>

    <div class="d-flex justify-content-center m-5">
        <label class="me-5 text-start">Phone number: </label><input type="text" /> <br />
    </div>

    <div>
        <button class="" >Clear</button>
        <button class="align-content-end">Submit</button>
    </div>

</form>

</body>



